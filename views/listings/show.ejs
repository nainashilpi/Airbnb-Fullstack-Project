<% layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<style>
  .show-wrapper {
    max-width: 900px;
    margin: auto;
    background: #fff;
    padding: 20px;
    border-radius: 16px;
  }

  .img-wrapper {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 20px rgba(0,0,0,0.08);
  }

  .show-img {
    height: 300px;
    object-fit: cover;
    border-radius: 14px;
    transition: transform 0.3s ease;
  }

  .show-img:hover {
    transform: scale(1.02);
  }

  .carousel-control-prev,
  .carousel-control-next {
    display: none;
  }

  .heart-icon {
    position: absolute;
    top: 12px;
    right: 12px;
    background: rgba(255,255,255,0.9);
    border-radius: 50%;
    padding: 8px 10px;
    cursor: pointer;
    font-size: 20px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    z-index: 10;
  }

  .heart-icon i {
    color: #333;
    transition: 0.2s;
  }

  .heart-icon.liked i {
    color: #fe424d !important;
  }

  .price-badge {
    background-color: #fe424d;
    color: white;
    padding: 6px 14px;
    border-radius: 20px;
    font-weight: 500;
    display: inline-block;
    box-shadow: 0 4px 10px rgba(254,66,77,0.25);
  }

  .owner-text {
    font-size: 0.95rem;
    color: gray;
  }

  .soft-divider {
    border: none;
    height: 1px;
    background: linear-gradient(to right, #eee, #ddd, #eee);
    margin: 25px 0;
  }

  .rating-text {
    font-size: 0.95rem;
    margin-top: 4px;
  }

  .owner-actions {
    display: flex;
    gap: 10px;
    margin-top: 10px;
  }

  .btn-edit {
    border: 1px solid rgba(0,0,0,0.15);
    color: #222;
    background: white;
    border-radius: 20px;
    padding: 5px 12px;
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .btn-edit:hover {
    background: #f6f7f9;
    border-color: #fe424d;
    color: #fe424d;
  }

  .btn-delete {
    background: #f6f7f9;
    border-color: #fe424d;
    color: #fe424d;
    border-radius: 20px;
  }

  .btn-delete:hover {
    border: 1px solid rgba(0,0,0,0.15);
    color: #222;
    background: white;
    border-radius: 20px;
    padding: 5px 12px;
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  /* ‚≠ê FACILITIES GRID */
  .amenities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 10px;
  }

  .amenity-item {
    font-size: 0.95rem;
  }

  /* ‚≠ê REVIEWS (3 PER ROW) */
  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
  }

  @media (max-width: 992px) {
    .reviews-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 576px) {
    .reviews-grid {
      grid-template-columns: 1fr;
    }
  }

  .review-card {
    border: none;
    border-radius: 14px;
    box-shadow: 0 6px 15px rgba(0,0,0,0.08);
    padding: 10px;
    background: #fff;
    border-left: 4px solid #fe424d;
  }

  .review-header {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .review-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #fe424d;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
  }

  .review-name {
    font-weight: 600;
    margin: 0;
  }

  .review-date {
    font-size: 0.8rem;
    color: gray;
  }

  .starability-result {
    font-size: 0.8rem;
  }

  /* SEE MORE / LESS */
  .see-more-btn {
    border: none;
    background: none;
    color: #fe424d;
    font-weight: 600;
    margin-top: 10px;
  }

  .see-more-btn:hover {
    text-decoration: underline;
  }

  /* ‚≠ê SUBMIT BUTTON  */
  .review-submit-btn {
    border-radius: 20px;
    border: 1px solid #fe424d;
    color: #fe424d;
    font-weight: 600;
  }

  .review-submit-btn:hover {
    background: #fe424d;
    color: white;
  }

  #map {
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.08);
  }

  /*  REVIEW DELETE BUTTON  */
.review-delete-btn {
  border: 1px solid rgba(0,0,0,0.15);
  color: #222;
  background: white;
  border-radius: 20px;
  padding: 5px 12px;
  font-size: 0.85rem;
  font-weight: 500;
  transition: all 0.2s ease;
}

.review-delete-btn:hover {
  background: #f6f7f9;
  border-color: #fe424d;
  color: #fe424d;
}

</style>

<div class="row mt-3 show-wrapper">

  <div class="col-12 mb-2">
    <h3 class="mb-0"><%= listing.title %></h3>
    <p class="text-muted mb-1"><%= listing.location %>, <%= listing.country %></p>

    <% 
      let total = 0;
      let count = listing.reviews.length;
      listing.reviews.forEach(r => total += r.rating);
      let avg = count ? (total / count).toFixed(1) : 0;
    %>

    <% if (count > 0) { %>
      <p class="rating-text">
        <span style="background:#fff3f4; padding:4px 8px; border-radius:12px;">
          ‚≠ê <%= avg %>
        </span>
        ‚Ä¢ <%= count %> reviews
      </p>
    <% } %>
  </div>

  <% const isLiked = currUser && currUser.favourites.includes(listing._id); %>

  <div class="col-12 img-wrapper">
    <img src="<%= listing.image.url %>" class="d-block w-100 show-img">

    <span class="heart-icon <%= isLiked ? 'liked' : '' %>" id="heart">
      <i class="fa-<%= isLiked ? 'solid' : 'regular' %> fa-heart"></i>
    </span>
  </div>

  <div class="col-12 mt-3">
    <span class="price-badge">
      ‚Çπ <%= listing.price.toLocaleString("en-IN") %> / night
    </span>

    <p class="owner-text mt-2">
      Owned by <b><%= listing.owner.username %></b>
    </p>

    <% if (currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
      <div class="owner-actions">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-edit btn-sm">
          ‚úèÔ∏è Edit Listing
        </a>

        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-delete btn-sm">üóëÔ∏è Delete</button>
        </form>
      </div>
    <% } %>

    <h5 class="mt-3">About this place</h5>
    <p><%= listing.description %></p>

    <h5 class="mt-4">What this place offers</h5>
    <div class="amenities-grid mt-2">
      <div class="amenity-item">‚úî Wi-Fi</div>
      <div class="amenity-item">‚úî Air conditioning</div>
      <div class="amenity-item">‚úî Kitchen</div>
      <div class="amenity-item">‚úî Parking</div>
      <div class="amenity-item">‚úî TV</div>
      <div class="amenity-item">‚úî Pool</div>
      <div class="amenity-item">‚úî Air Condition</div>
      <div class="amenity-item">‚úî Free cancellation</div>
    </div>
  </div>

  <hr class="soft-divider" />

  <% if (currUser) { %>
  <div class="col-12 mb-4">
    <h5>Leave a Review</h5>

    <form action="/listings/<%= listing._id %>/reviews" method="POST" 
          novalidate class="needs-validation">

      <div class="mb-3 mt-2">
        <label class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked />

          <input type="radio" id="rate1" name="review[rating]" value="1" />
          <label for="rate1">1</label>

          <input type="radio" id="rate2" name="review[rating]" value="2" />
          <label for="rate2">2</label>

          <input type="radio" id="rate3" name="review[rating]" value="3" />
          <label for="rate3">3</label>

          <input type="radio" id="rate4" name="review[rating]" value="4" />
          <label for="rate4">4</label>

          <input type="radio" id="rate5" name="review[rating]" value="5" />
          <label for="rate5">5</label>
        </fieldset>
      </div>

      <div class="mb-3">
        <label class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          rows="4"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add a comment</div>
      </div>
      <button class="btn review-submit-btn">Submit</button>
    </form>
  </div>
  <% } %>

  <hr class="soft-divider" />

  <div class="col-12">
    <h5>Reviews (<%= listing.reviews.length %>)</h5>

    <% if (listing.reviews.length === 0) { %>
      <p class="text-muted mt-2">No reviews yet. Be the first one üåü</p>
    <% } %>

    <div class="reviews-grid mt-3" id="reviewsGrid">
      <% listing.reviews.slice(0, 3).forEach(review => { %>
      <div class="review-card">
        <div class="review-header">
          <div class="review-avatar">
          <%= review.author.username[0].toUpperCase() %>
          </div>
        <div>
        <p class="review-name">@<%= review.author.username %></p>
        <small class="review-date">
          Reviewed in <%= new Date().toLocaleString('default', { month: 'short', year: 'numeric' }) %>
        </small>
      </div>
    </div>

    <p class="starability-result mt-2" data-rating="<%= review.rating %>"></p>
    <p class="review-body"><%= review.comment %></p>

    <% if (currUser && review.author._id.equals(currUser._id)) { %>
      <form method="POST"
        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
        <button class="review-delete-btn mt-2">Delete</button>
      </form>
    <% } %>
  </div>
  <% }) %>
</div>

    <% if (listing.reviews.length > 3) { %>
      <button class="see-more-btn" id="toggleReviews">See more reviews</button>
    <% } %>
  </div>

  <div class="col-12 mt-4 mb-4">
    <h4 class="mb-2">üìç Where you'll be staying</h4>
    <div id="map"></div>
  </div>

</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const heart = document.getElementById("heart");
  if (!heart) return;

  heart.addEventListener("click", async function () {
    const listingId = "<%= listing._id %>";
    const res = await fetch(`/listings/${listingId}/like`, { method: "POST" });
    const data = await res.json();
    const icon = this.querySelector("i");

    if (data.liked) {
      this.classList.add("liked");
      icon.classList.replace("fa-regular", "fa-solid");
    } else {
      this.classList.remove("liked");
      icon.classList.replace("fa-solid", "fa-regular");
    }
  });
});
</script>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const toggleBtn = document.getElementById("toggleReviews");
  const reviewsGrid = document.getElementById("reviewsGrid");
  const allReviews = <%- JSON.stringify(listing.reviews) %>;

  let expanded = false;

  if (!toggleBtn) return;

  toggleBtn.addEventListener("click", function () {
    reviewsGrid.innerHTML = "";

    if (!expanded) {
      allReviews.forEach(review => {
        reviewsGrid.innerHTML += `
        <div class="review-card">
          <div class="review-header">
            <div class="review-avatar">${review.author.username[0].toUpperCase()}</div>
            <div>
              <p class="review-name">@${review.author.username}</p>
              <small class="review-date">Reviewed recently</small>
            </div>
          </div>
          <p class="starability-result" data-rating="${review.rating}"></p>
          <p class="review-body">${review.comment}</p>

          ${ review.author._id === "<%= currUser ? currUser._id : '' %>"
            ? `<form method="POST"
                 action="/listings/${"<%= listing._id %>"}/reviews/${review._id}?_method=DELETE">
                 <button class="btn btn-sm btn-outline-dark mt-2">Delete</button>
               </form>`
            : ""
          }
        </div>
        `;
      });
      toggleBtn.textContent = "See less reviews";
    } else {
      allReviews.slice(0, 3).forEach(review => {
        reviewsGrid.innerHTML += `
        <div class="review-card">
          <div class="review-header">
            <div class="review-avatar">${review.author.username[0].toUpperCase()}</div>
            <div>
              <p class="review-name">@${review.author.username}</p>
              <small class="review-date">Reviewed recently</small>
            </div>
          </div>
          <p class="starability-result" data-rating="${review.rating}"></p>
          <p class="review-body">${review.comment}</p>

          ${ review.author._id === "<%= currUser ? currUser._id : '' %>"
            ? `<form method="POST"
                 action="/listings/${"<%= listing._id %>"}/reviews/${review._id}?_method=DELETE">
                 <button class="btn btn-sm btn-outline-dark mt-2">Delete</button>
               </form>`
            : ""
          }
        </div>
        `;
      });
      toggleBtn.textContent = "See more reviews";
    }

    expanded = !expanded;
  });
});
</script>

<script src="/js/map.js"></script>
