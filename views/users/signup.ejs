<% layout("/layouts/boilerplate") %> 

<style>
  body {
    background: linear-gradient(180deg, #ffffff, #f4f6f8);
  }

  .auth-wrapper {
    max-width: 460px;
    margin: 40px auto;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(6px);
    padding: 32px;
    border-radius: 22px;
    box-shadow: 0 12px 30px rgba(0,0,0,0.08);
    animation: fadeIn 0.6s ease-in-out;
    border: 1px solid rgba(0,0,0,0.05);
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(12px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .auth-title {
    font-weight: 700;
    margin-bottom: 6px;
    letter-spacing: 0.2px;
  }

  .auth-sub {
    color: #6c757d;
    font-size: 0.95rem;
    margin-bottom: 22px;
  }

  .new-card .form-control {
    border-radius: 16px;
    padding: 12px 14px;
  }

  .new-card .form-control:focus {
    border-color: #fe424d;
    box-shadow: 0 0 0 0.12rem rgba(254,66,77,0.18);
  }

  .form-control:focus {
    border-color: #fe424d;
    box-shadow: 0 0 0 0.1rem rgba(254,66,77,0.18);
  }

  .signup-btn {
    width: 100%;
    background: linear-gradient(135deg, #fe424d, #ff5a60);
    border: none;
    border-radius: 24px;
    padding: 10px;
    font-weight: 600;
    transition: all 0.25s ease;
  }

  .signup-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 16px rgba(254,66,77,0.25);
  }

  .auth-footer {
    text-align: center;
    font-size: 0.9rem;
    margin-top: 16px;
  }

  .auth-footer a {
    color: #fe424d;
    text-decoration: none;
    font-weight: 600;
  }

  .auth-footer a:hover {
    text-decoration: underline;
  }

  .divider {
    display: flex;
    align-items: center;
    text-align: center;
    margin: 18px 0;
    color: #888;
    font-size: 0.85rem;
  }

  .divider::before,
  .divider::after {
    content: "";
    flex: 1;
    border-bottom: 1px solid rgba(0,0,0,0.08);
  }

  .divider::before { margin-right: 10px; }
  .divider::after { margin-left: 10px; }
</style>

<div class="auth-wrapper">
  <h2 class="auth-title">Create your account</h2>
  <p class="auth-sub">Join Wanderlust and start exploring</p>

  <form action="/signup" method="POST" class="needs-validation" novalidate>

    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input 
        name="username"
        id="username"
        type="text"
        class="form-control" 
        required 
        placeholder="Choose a username"
      />
      <div class="invalid-feedback">Please choose a username.</div>
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input 
        name="email"
        id="email"
        type="email"
        class="form-control" 
        required 
        placeholder="Enter your email"
      />
      <div class="invalid-feedback">Please enter a valid email.</div>
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input 
        name="password"
        id="password"
        type="password"
        class="form-control" 
        required 
        placeholder="Create a password"
      />
      <div class="invalid-feedback">Please set a password.</div>
    </div>

    <button class="btn signup-btn text-white">Create account</button>
  </form>

  <div class="divider">or</div>

  <div class="auth-footer">
    Already have an account? <a href="/login">Log in</a>
  </div>
</div>
