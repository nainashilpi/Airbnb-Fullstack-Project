<style>
  .flash-wrapper {
    max-width: 520px;
    margin: 20px auto;
    animation: slideIn 0.35s ease-in-out;
  }

  @keyframes slideIn {
    from { opacity: 0; transform: translateY(-8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .flash {
    border-radius: 14px;
    padding: 14px 16px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    backdrop-filter: blur(6px);
  }

  .flash.success {
    background: rgba(40, 167, 69, 0.08);
    border: 1px solid rgba(40, 167, 69, 0.25);
    color: #1f7a3d;
  }

  .flash.error {
    background: rgba(254, 66, 77, 0.08);
    border: 1px solid rgba(254, 66, 77, 0.25);
    color: #b02a37;
  }

  .flash-content {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .flash-icon {
    font-size: 18px;
  }

  .flash-message {
    font-weight: 500;
    margin: 0;
  }

  .flash .btn-close {
    font-size: 12px;
    opacity: 0.7;
  }

  .flash .btn-close:hover {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .flash-wrapper {
      max-width: 90%;
    }
  }
</style>

<% if (success && success.length) { %>
  <div class="flash-wrapper">
      <div class="flash alert success alert-dismissible fade show" role="alert">
      <div class="flash-content">
        <i class="fa-solid fa-circle-check flash-icon"></i>
        <p class="flash-message"><%= success %></p>
      </div>

      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close">
      </button>
    </div>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="flash-wrapper">
    <div class="flash alert error alert-dismissible fade show" role="alert">
      <div class="flash-content">
        <i class="fa-solid fa-circle-exclamation flash-icon"></i>
        <p class="flash-message"><%= error %></p>
      </div>

      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close">
      </button>
    </div>
  </div>
<% } %>
