<style>
  .search-btn{
    background-color:#fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
    font-size: 0.95rem;
  }

  .search-btn:hover {
    background-color:#e53b45;
    color: #fff;
  }

  .search-btn i{
    display: inline;
    margin-right: 0.5rem;
  }

  .search-info {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 0.95rem;
    border: 1px solid rgba(0,0,0,0.08);
  }

  .navbar {
    padding: 8px 16px;
    background: white;
  }

  .navbar.sticky-top {
    box-shadow: 0 1px 8px rgba(0,0,0,0.06);
  }

  .navbar-brand i {
    font-size: 26px;
    color: #fe424d;
  }

  .nav-link {
    font-size: 0.95rem;
    font-weight: 500;
    color: #222;
  }

  .nav-link:hover {
    color: #fe424d;
  }

  .saved-link {
    border: 1px solid #fe424d;
    color: #fff;
    border-radius: 20px;
    padding: 4px 10px;
    margin-left: 6px;
    transition: all 0.2s ease;
  }

  .saved-link:hover {
    background: #fe424d;
    color: white !important;
  }

  .saved-link:active,
  .saved-link:focus,
  .saved-link.active {
    background: #fe424d !important;
    color: white !important;
    border-color: #fe424d;
  }

  .host-link {
    color: #222;
    font-weight: 500;
  }

  .user-menu {
    position: relative;
  }

  .user-btn {
    border: 1px solid rgba(0,0,0,0.15);
    border-radius: 999px;
    padding: 4px 10px;
    display: flex;
    align-items: center;
    gap: 6px;
    cursor: pointer;
    background: white;
    transition: all 0.2s ease;
  }

  .user-btn:hover {
    box-shadow: 0 2px 6px rgba(0,0,0,0.08);
  }

  .user-btn i {
    font-size: 16px;
    color: #222;
  }

  .user-dropdown {
    position: absolute;
    top: 42px;
    right: 0;
    background: white;
    border-radius: 12px;
    box-shadow: 0 6px 16px rgba(0,0,0,0.12);
    min-width: 160px;
    display: none;
    z-index: 1000;
    overflow: hidden;
  }

  .user-dropdown a {
    display: block;
    padding: 10px 14px;
    color: #222;
    text-decoration: none;
    font-size: 0.95rem;
  }

  .user-dropdown a:hover {
    background: #f6f6f6;
  }

  .user-menu.active .user-dropdown {
    display: block;
  }

  .user-menu:hover .user-dropdown {
    display: block;
  }

  @media (max-width: 768px) {
    .search-info {
      width: 100%;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <button 
      class="navbar-toggler" 
      type="button" 
      data-bs-toggle="collapse" 
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span> 
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav mx-auto">
        <form class="d-flex" role="search" action="/listings" method="GET">
          <input 
            class="form-control me-2 search-info" 
            type="search" 
            name="q"
            placeholder="Search destinations" 
            required
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto align-items-center gap-2">

        <a class="nav-link host-link" href="/listings/new">
          Airbnb your home
        </a>

        <% if (currUser) { %>
          <a class="nav-link saved-link" href="/listings/favourites">
            <i class="fa-regular fa-heart me-1"></i> Saved
          </a>
        <% } %>

        <div class="user-menu" id="userMenu">
          <div class="user-btn" id="userBtn">
            <i class="fa-regular fa-user"></i>
            <i class="fa-solid fa-chevron-down" style="font-size: 10px;"></i>
          </div>

          <div class="user-dropdown">
            <% if (!currUser) { %>
              <a href="/signup">Sign Up</a>
              <a href="/login">Log in</a>
            <% } else { %>
              <a href="/logout">Log Out</a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const userMenu = document.getElementById("userMenu");
  const userBtn = document.getElementById("userBtn");

  userBtn.addEventListener("click", function (e) {
    e.stopPropagation();
    userMenu.classList.toggle("active");
  });

  document.addEventListener("click", function () {
    userMenu.classList.remove("active");
  });
});
</script>
